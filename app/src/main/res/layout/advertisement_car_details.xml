<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteX">

    <include
        layout="@layout/car_details"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btn_rent_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_to_hire_message"
            android:backgroundTint="@color/searchBgColor"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/whiteX"
            android:padding="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="25dp">
        </Button>

        <Button
            android:id="@+id/btn_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black2"
            android:padding="15dp"
            android:text="@string/hire_history_text"
            android:textColor="@color/whiteX"
            android:textStyle="bold">
        </Button>

    </LinearLayout>

</LinearLayout>