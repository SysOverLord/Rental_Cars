<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".MainPage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_above="@id/main_page_bottomNavigationView"
        android:id="@+id/main_page_frameLayout"
        android:layout_height="match_parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottombarmenu"
        android:id="@+id/main_page_bottomNavigationView"
        android:background="@color/gray"
        app:itemIconTint="@color/bottombar_color"
        app:itemTextColor="@color/bottombar_color"/>



</RelativeLayout>